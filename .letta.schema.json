{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Letta Code Configuration Schema",
  "description": "Schema for .letta/settings.json - defines authoritative structure",
  "version": "1.0",
  "type": "object",
  "required": ["localSharedBlockIds", "permissions"],
  "properties": {
    "localSharedBlockIds": {
      "type": "object",
      "description": "Shared memory block IDs for Letta context",
      "required": ["project"],
      "properties": {
        "project": {
          "type": "string",
          "pattern": "^block-[a-f0-9-]+$",
          "description": "Project-specific Letta memory block ID"
        }
      }
    },
    "pathPlaceholder": {
      "type": "string",
      "description": "Resolved project root path on this machine"
    },
    "metadata": {
      "type": "object",
      "description": "Sync metadata tracking",
      "properties": {
        "lastSyncedMachine": {
          "type": "string",
          "description": "Hostname of machine that last synced"
        },
        "lastSyncedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO timestamp of last sync"
        },
        "version": {
          "type": "string",
          "description": "Schema version for migrations"
        }
      }
    },
    "permissions": {
      "type": "object",
      "description": "Letta Code permission rules",
      "required": ["allow"],
      "properties": {
        "allow": {
          "type": "array",
          "description": "Whitelisted bash commands",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
