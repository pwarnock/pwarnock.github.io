{{- $context := . -}}
{{- $type := "tool" -}}
{{- $title := $context.Title -}}
{{- $url := $context.Permalink -}}
{{- $size := "medium" -}}
{{- $cardStyle := "list" -}}

{{- $content := $context.Params.description | default $context.Summary -}}
{{- $tags := $context.Params.tags -}}
{{- $date := $context.Date.Format "January 2006" -}}
{{- $btnText := "View Details" -}}

{{- $sizeClasses := dict "small" "card-xs" "medium" "card-sm" "large" "card-md" "list" "card-md" -}}
{{- $titleSizeClasses := dict "small" "text-lg" "medium" "text-xl lg:text-2xl" "large" "text-2xl lg:text-3xl" -}}
{{- $cardClasses := dict "default" "card-border shadow-lg hover:shadow-xl transition-shadow" "list" "card-border shadow-xl hover:shadow-2xl transition-shadow duration-300" -}}

<article class="card bg-base-100 {{ index $sizeClasses $size }} {{ index $cardClasses $cardStyle }}">
  <div class="card-body">
    {{- if $title }}
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4 mb-4">
      <div class="flex items-center gap-3">
        <h3 class="card-title {{ index $titleSizeClasses $size }}">
          {{- if $url }}
          <a href="{{ $url }}" class="link link-hover text-accent no-underline hover:underline">
            {{ $title }}
          </a>
          {{- else }}
            {{ $title }}
          {{- end }}
        </h3>
        {{- if $context.Params.tool_category }}
        <div class="badge badge-ghost">{{ $context.Params.tool_category }}</div>
        {{- end }}
      </div>
      {{- if $tags }}
      <div class="flex flex-wrap gap-2 lg:gap-1">
        {{- range $tags }}
        <span class="badge badge-sm badge-ghost">{{ . }}</span>
        {{- end }}
      </div>
      {{- end }}
    </div>
    {{- end }}

    {{- if $content }}
    <p class="text-base-content/80 mb-6 line-clamp-3">{{ $content }}</p>
    {{- end }}

    {{- if or $date $url }}
    <div class="card-actions justify-between items-center">
      <div class="text-sm text-base-content/60">
        {{- if $date }}
        <time datetime="{{ $date }}" class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          {{ $date }}
        </time>
        {{- end }}
        {{- if $context.Params.website }}
        <span class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
          {{ $context.Params.website }}
        </span>
        {{- end }}
      </div>
      
      <div class="flex gap-2">
        {{- if $context.Params.external_url }}
        <a href="{{ $context.Params.external_url }}" target="_blank" rel="noopener" class="btn btn-primary btn-sm hover:btn-primary-focus transition-colors">
          Visit Tool
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
        {{- end }}
        {{- if $url }}
        <a href="{{ $url }}" class="btn btn-outline btn-sm hover:btn-outline-focus transition-colors">
          {{ $btnText }}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        {{- end }}
      </div>
    </div>
    {{- end }}
  </div>
</article>