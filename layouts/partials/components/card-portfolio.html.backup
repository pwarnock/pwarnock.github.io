{{- $context := . -}}
{{- $type := "portfolio" -}}
{{- $title := $context.Title -}}
{{- $url := $context.Permalink -}}
{{- $size := "medium" -}}
{{- $cardStyle := "list" -}}

{{- $content := $context.Params.description | default $context.Summary -}}
{{- $tags := $context.Params.technologies -}}
{{- $date := $context.Date.Format "January 2006" -}}
{{- $btnText := "View Details" -}}

{{- $sizeClasses := dict "small" "card-xs" "medium" "card-sm" "large" "card-md" "list" "card-md" -}}
{{- $titleSizeClasses := dict "small" "text-lg" "medium" "text-xl lg:text-2xl" "large" "text-2xl lg:text-3xl" -}}
{{- $cardClasses := dict "default" "card-border shadow-lg hover:shadow-xl transition-shadow" "list" "card-border shadow-xl hover:shadow-2xl transition-shadow duration-300" -}}

<article class="card bg-base-100 {{ index $sizeClasses $size }} {{ index $cardClasses $cardStyle }}">
  <div class="card-body">
    {{- if $title }}
    <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4 mb-4">
      <div class="flex items-center gap-3">
        <h3 class="card-title {{ index $titleSizeClasses $size }}">
          {{- if $url }}
          <a href="{{ $url }}" class="link link-hover text-accent no-underline hover:underline">
            {{ $title }}
          </a>
          {{- else }}
            {{ $title }}
          {{- end }}
        </h3>
        {{- if $context.Params.category }}
        <div class="badge badge-ghost">{{ $context.Params.category }}</div>
        {{- end }}
      </div>
      {{- if $tags }}
      <div class="flex flex-wrap gap-2 lg:gap-1">
        {{- range $tags }}
        <span class="badge badge-sm badge-ghost">{{ . }}</span>
        {{- end }}
      </div>
      {{- end }}
    </div>
    {{- end }}

    {{- if $content }}
    <p class="text-base-content/80 mb-6 line-clamp-3">{{ $content }}</p>
    {{- end }}

    {{- if or $date $url }}
    <div class="card-actions justify-between items-center">
      <div class="text-sm text-base-content/60">
        {{- if $date }}
        <time datetime="{{ $date }}" class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          {{ $date }}
        </time>
        {{- end }}
        {{- if $context.Params.client }}
        <span class="flex items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          {{ $context.Params.client }}
        </span>
        {{- end }}
      </div>
      
      <div class="flex gap-2">
        {{- if $context.Params.live_url }}
        <a href="{{ $context.Params.live_url }}" target="_blank" rel="noopener" class="btn btn-primary btn-sm hover:btn-primary-focus transition-colors">
          Live Demo
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
        {{- end }}
        {{- if $context.Params.github_url }}
        <a href="{{ $context.Params.github_url }}" target="_blank" rel="noopener" class="btn btn-outline btn-sm hover:btn-outline-focus transition-colors">
          GitHub
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        {{- end }}
        {{- if $url }}
        <a href="{{ $url }}" class="btn btn-outline btn-sm hover:btn-outline-focus transition-colors">
          {{ $btnText }}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        {{- end }}
      </div>
    </div>
    {{- end }}
  </div>
</article>