{
  "extends": "stylelint-config-standard",
  "rules": {
  "at-rule-no-unknown": [
  true,
  {
  "ignoreAtRules": [
  "tailwind",
  "apply",
  "variants",
  "responsive",
  "screen",
  "plugin"
  ]
  }
  ],
  "import-notation": null,
    "no-descending-specificity": null
  },
  "ignoreFiles": [
  "node_modules/**/*",
  "themes/**/*",
  "public/**/*",
  "static/**/*",
  "assets/css/tailwind.css",
    "temp-tailwind-output.css"
  ]
}