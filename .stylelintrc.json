{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["theme", "import", "plugin"]
      }
    ],
    "no-empty-source": null,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["--*"]
      }
    ]
  },
  "ignoreFiles": [
    "static/css/main.css"
  ]
}