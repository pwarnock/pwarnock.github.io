# Development configuration
# Dynamic baseURL based on worktree detection
baseURL = "http://localhost:1313"

[params]
  googleAnalytics = ""  # Disable GA in development
  env = "development"

# Development build settings
buildDrafts = true
buildFuture = true

# Development imaging settings
[imaging]
  resampleFilter = "Lanczos"
  quality = 85
  anchor = "smart"
  
  [imaging.resizing.blog]
    width = 800
    height = 450  # 16:9 aspect ratio
    filter = "Lanczos"
    quality = 85
