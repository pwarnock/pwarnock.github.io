{
  "name": "pwarnock.github.io",
  "version": "1.0.0",
  "description": "",
  "main": "postcss.config.js",
  "scripts": {
    "build": "hugo --gc --ignoreCache --minify",
    "clean": "rm -rf public",
    "dev": "hugo server -D",
    "lint": "npm run lint:yaml && npm run lint:toml && npm run lint:css",
    "lint:check": "stylelint \"assets/css/**/*.css\" \"static/css/**/*.css\"",
    "lint:yaml": "npx yaml-lint .github/workflows/*.yml",
    "lint:toml": "npx @taplo/cli lint **/*.toml",
    "lint:css": "stylelint \"**/*.css\" --ignore-path .gitignore",
    "validate": "./scripts/validate.sh",
    "postinstall": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@taplo/cli": "^0.7.0",
    "daisyui": "^5.0.0",
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.45.0",
    "postcss": "^8.5.6",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.0.0",
    "yaml-lint": "^1.7.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/typography": "^0.5.19"
  }
}
